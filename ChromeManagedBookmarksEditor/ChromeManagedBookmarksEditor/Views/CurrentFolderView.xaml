<UserControl x:Class="ChromeManagedBookmarksEditor.Views.CurrentFolderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChromeManagedBookmarksEditor.Views"
             xmlns:data="clr-namespace:ChromeManagedBookmarksEditor.Model"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" BorderBrush="DimGray" BorderThickness="2">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding ChromeBookmarks.CurrentWorkingFolder}"
                   FontSize="20" Background="DimGray" Foreground="Gainsboro"
                   />

        <ScrollViewer Grid.Row="1" Background="Gainsboro">
            <ItemsControl ItemsSource="{Binding ChromeBookmarks.Children}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.Resources>
                    <DataTemplate DataType="{x:Type data:Folder}">
                        <Button Content="{Binding Name}" Background="Aqua"/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type data:URL}">
                        <StackPanel Orientation="Horizontal">
                            <TextBox Text="{Binding Name}" Background="LightYellow" Margin="0 0 5 0"/>
                            <TextBox Text="{Binding Url}" Background="LightYellow"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.Resources>
            </ItemsControl>
        </ScrollViewer>
        
        <StackPanel Orientation="Horizontal" Grid.Row="3" Background="DimGray">
            <Button Content="Add Folder" MinWidth="140" Background="Gainsboro"/>
            <Button Content="Add URL" MinWidth="140" Background="Gainsboro"/>
            <Button Content="Remove Selected" MinWidth="140" Background="Gainsboro"/>
        </StackPanel>
    </Grid>
</UserControl>
