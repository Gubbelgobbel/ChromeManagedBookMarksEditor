<UserControl x:Class="ChromeManagedBookmarksEditor.Views.CurrentFolderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChromeManagedBookmarksEditor.Views"
             xmlns:data="clr-namespace:ChromeManagedBookmarksEditor.Model"
             xmlns:att_helper="clr-namespace:ChromeManagedBookmarksEditor.Helpers.AttachedCommandBehavior"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" BorderBrush="DimGray" BorderThickness="2">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding ChromeBookmarks.CurrentWorkingFolder}"
                   Style="{StaticResource PathTextBoxStyle}"
                   />
        <ScrollViewer Grid.Row="1" Background="Gainsboro">
            <ItemsControl ItemsSource="{Binding ChromeBookmarks.Children}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.Resources>
                    <DataTemplate DataType="{x:Type data:Folder}">
                        <TextBox Text="{Binding Name}"
                                 Style="{StaticResource FolderTextBoxStyle}"
                                 />
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type data:URL}">
                        <DockPanel HorizontalAlignment="Stretch">
                            <DockPanel.Resources>
                                <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource UrlTextBoxStyle}"/>
                            </DockPanel.Resources>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding Name}" Grid.Column="0"
                                         att_helper:CommandBehavior.Event="GotKeyboardFocus"
                                         att_helper:CommandBehavior.Action="{Binding ShowHelpCommand}"
                                         att_helper:CommandBehavior.CommandParameter="{Binding}"/>
                                <TextBox Text="{Binding Url}" Grid.Column="1"/>
                            </Grid>
                        </DockPanel>
                    </DataTemplate>
                </ItemsControl.Resources>
            </ItemsControl>
        </ScrollViewer>

        <!-- Visual in-editor test code: Comment out to run-->
        <!--<StackPanel Grid.Row="1">
            <TextBox Text="Folder 1" Style="{StaticResource FolderTextBoxStyle}"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="URL NAME HERE" 
                     Style="{StaticResource UrlTextBoxStyle}"/>
                <TextBox Text="https://url.link.here.com"
                     Style="{StaticResource UrlTextBoxStyle}"/>
            </StackPanel>
        </StackPanel>-->
        <!-- Visual in-editor test code END-->

        <StackPanel Orientation="Horizontal" Grid.Row="3" Background="DimGray">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource PanelButtonsStyle}"/>
            </StackPanel.Resources>
            <Button Content="Add Folder"/>
            <Button Content="Add URL"/>
            <Button Content="Remove Selected"/>
        </StackPanel>
    </Grid>
</UserControl>
